*
  font-family Microsoft YaHei,-apple-system,PingFang SC,Hiragino Sans GB,Helvetica Neue,Arial,sans-serif
  padding 0
  margin 0
  border none
  list-style none
  text-underline none
  text-decoration none
  outline none
html
  background-color #F5F5F5
  font-family MicrosoftYaHei
.wrap
  width 1300px
  margin auto
  .logo
    padding 50px 0
  .title
    height 80px
    line-height 80px
    font-size 28px
    color #ffffff
    text-align center
    background #2475E2
  .content
    overflow hidden
    padding-top 50px
    .left-box
      width 300px
      height 190px
      background #2475E2
      float left
      text-align center
      font-size 28px
      color #ffffff
      padding-top 60px
      img
        padding-top 20px
    .right-box
      height 250px
      width 1000px
      background #ffffff
      float left
      font-size 16px
      text-align center
      a
        display inline-block
        padding 55px 120px
        text-align center
        color #333333
        p
          padding 10px 0
        .btn
          display inline-block
          width 80px
          height 30px
          line-height 30px
          background #2475E2
          border-radius 5px
          color #ffffff
          font-size 14px
      .code
        padding-top 50px
        display inline-block
        padding-right 180px
        &:last-child
          padding-right 30px


